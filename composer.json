{
  "name": "horizom/horizom",
  "description": "A light PHP framework",
  "version": "3.0.0",
  "license": "MIT",
  "keywords": [
    "horizon",
    "horizom",
    "framework",
    "php"
  ],
  "homepage": "https://horizom.github.io",
  "support": {
    "issues": "https://github.com/horizom/horizom/issues",
    "source": "https://github.com/horizom/horizom"
  },
  "authors": [
    {
      "name": "Horizom Team",
      "email": "horizom.team@gmail.com"
    },
    {
      "name": "Codec Solutions",
      "email": "infos@codecci.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "filp/whoops": "^2.14",
    "guzzlehttp/psr7": "^2.1",
    "http-interop/http-factory-guzzle": "^1.0",
    "illuminate/collections": "^8.0",
    "illuminate/contracts": "^8.0",
    "illuminate/support": "^8.0",
    "illuminate/view": "^8.0",
    "middlewares/request-handler": "^2.0",
    "middlewares/utils": "^3.2",
    "middlewares/whoops": "^2.0",
    "nikic/fast-route": "^1.3",
    "nyholm/psr7": "^1.5",
    "php-di/invoker": "^2.1",
    "php-di/php-di": "^6.0",
    "php-http/message-factory": "^1.0",
    "psr/container": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "symfony/http-foundation": "^5.4",
    "symfony/mime": "^5.4"
  },
  "require-dev": {
    "digitalnature/php-ref": "^1.3",
    "symplify/monorepo-builder": "^11.0"
  },
  "replace": {
    "horizon/auth": "self.version",
    "horizon/core": "self.version",
    "horizon/http": "self.version",
    "horizon/routing": "self.version",
    "horizon/session": "self.version",
    "horizon/validation": "self.version"
  },
  "autoload": {
    "psr-4": {
      "Horizom\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "tests/app/"
    }
  },
  "suggest": {
    "guzzlehttp/guzzle": "Required to use the HTTP Client and the ping methods on schedules (^7.2).",
    "psr/http-message": "Required to allow Storage::put to accept a StreamInterface (^1.0)."
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "start": "php -S localhost:8005 -t tests/public"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
